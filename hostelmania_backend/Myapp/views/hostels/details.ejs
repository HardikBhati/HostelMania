<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">HostelMania</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <!-- map -->

        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= hostel.image %>" alt="hostel image">
                <div class="caption">
                    <h4 class="pull-right">INR <%=hostel.price%>/per night</h4>
                    <h4><a href="#"> <%= hostel.name %> </a></h4>
                    <p> <%= hostel.description %> </p>
                    <p> Submitted by: <%= hostel.author.username %> </p>
                    <% if (user && hostel.author.id.equals(user.id)){ %>
                        <a class="btn btn-warning" href="/hostels/<%=hostel.id%>/edit">Edit hostel</a>
                    <% } %>
                </div>
            </div>

            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/hostels/<%=hostel.id%>/comments/new"> Add new comment </a>
                </div>
                <hr>
                <% for (let i=0;i<=hostel.comments.length-1;i++) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong> <%= hostel.comments[i].author.username %> </strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= hostel.comments[i].text %>
                            </p>

                            <% if (user && hostel.comments[i].author.id.equals(user.id)) { %>
                            <a class="btn btn-xs btn-primary" href="/hostels/<%=hostel.id%>/comments/<%=hostel.comments[i].id%>/edit">
                                Edit
                            </a>

                            <form action="/hostels/<%=hostel.id%>/comments/<%=hostel.comments[i].id%>?_method=DELETE" method="POST">
                                <button class="btn btn-xs btn-danger">Delete</button>
                            </form>
                            <% } %>

                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>




<%- include("../partials/footer") %>